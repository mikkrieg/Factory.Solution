@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1 class="text-center">Create Machine</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Model)
  @Html.TextBoxFor(model => model.Model, new { @class="form-control", @required="required" })

  @Html.LabelFor(model => model.minEngineerCount)
  @Html.TextBoxFor(model => model.minEngineerCount, new { @type="number", @class="form-control", @required="required", @min="1" })
  

  @Html.Label("Select an engineer to start working: ")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Create" class="btn btn-success"/>
}

<button class="btn btn-dark">@Html.ActionLink("Back to home", "Index", "Engineers")</button>